{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist/esm",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": ["src"]
}
